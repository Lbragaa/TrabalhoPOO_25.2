// Chamar ao iniciar a partida
void initSorteReves() {
    initSorteReves(new Random());
}

// Versão injetável (tests)
void initSorteReves(Random r) {
    List<Carta> cartas = new ArrayList<>();
    cartas.add(new Carta(TipoCarta.VAI_PARA_PRISAO, 0));
    cartas.add(new Carta(TipoCarta.SAIDA_LIVRE, 0));
    cartas.add(new Carta(TipoCarta.PAGAR, 50));
    cartas.add(new Carta(TipoCarta.PAGAR, 100));
    cartas.add(new Carta(TipoCarta.RECEBER, 50));
    cartas.add(new Carta(TipoCarta.RECEBER, 100));
    Collections.shuffle(cartas, (r != null ? r : new Random()));
    baralhoSorteReves.clear();
    for (Carta c : cartas) baralhoSorteReves.offer(c);
}
